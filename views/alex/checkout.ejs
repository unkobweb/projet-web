<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/dist/checkout.css" rel="stylesheet" />
    <title>Paiement</title>
  </head>
  <body>
    <%- include("header.ejs")%>
    <div id="homepage">
      <video
        poster="https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/polina.jpg"
        id="bgvid"
        playsinline
        autoplay
        muted
        loop
      >
        <source src="/img/background/background.mp4" type="video/mp4" />
      </video>
    <h1>PAIEMENT</h1>
    <div id="checkout">
      <%let total = 0%> <%session.Carts.forEach(jeu => { %> <%total +=
      parseFloat((jeu.Game.price-(jeu.Game.price*(jeu.Game.discount/100))).toFixed(2)*jeu.quantity)
      %> <%}); %>
      <p>Montant du paiement : <%=total%>â‚¬</p>
      <form id="payment-form">
        <div class="form-row">
          <label for="card-element">
            Carte de paiement
          </label>
          <div id="card-element">
            <!-- A Stripe Element will be inserted here. -->
          </div>

          <!-- Used to display form errors. -->
          <div id="card-errors" role="alert"></div>
        </div>

        <button
          id="card-button"
          data-secret="<%=paymentIntent.client_secret%>"
          data-customer="<%=session.username%>"
        >
          <i class="fas fa-money-bill-alt"></i> Payer
        </button>
      </form>
    </div>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="/js/checkout.js"></script>
  </body>
</html>
