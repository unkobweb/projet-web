<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/dist/index.css" rel="stylesheet" />
    <title>To Games Together</title>
  </head>
  <body>
    <%- include('header.ejs') %>
    <div id="homepage">
      <video id="bgvid" playsinline autoplay muted loop>
        <source src="/img/background/background.mp4" type="video/mp4" />
      </video>
      <h1 class="category">Nouveautés</h1>
      <div class="container">
        <span class="direction" @click="getNewGames('left','late')"><</span>
        <div class="jeux">
          <div class="jeu" v-for="jeu in jeuxLate" @click="goToGame(jeu.id)">
            <img :src="'/img/games/'+jeu.slug+'.jpg'" class="pochette" />
            <img
              :src="'/img/plateforms/'+jeu.Plateform.slug+'_logo.png'"
              :alt="jeu.Plateform.slug"
              class="plateformLogo"
            />
            <h2>
              {{ jeu.title }}
              <span class="discount">-{{ jeu.discount }}%</span>
            </h2>
            <h4>
              {{ (jeu.price - jeu.price * (jeu.discount / 100)).toFixed(2) }}€
            </h4>
          </div>
        </div>
        <span class="direction" @click="getNewGames('right','late')">></span>
      </div>

      <h1 class="category">Soldes</h1>
      <div class="container">
        <span class="direction" @click="getNewGames('left','discount')"><</span>
        <div class="jeux">
          <div
            class="jeu"
            v-for="jeu in jeuxDiscount"
            @click="goToGame(jeu.id)"
          >
            <img :src="'/img/games/'+jeu.slug+'.jpg'" class="pochette" />
            <img
              :src="'/img/plateforms/'+jeu.Plateform.slug+'_logo.png'"
              :alt="jeu.Plateform.slug"
              class="plateformLogo"
            />
            <h2>
              {{ jeu.title }}
              <span class="discount">-{{ jeu.discount }}%</span>
            </h2>
            <h4>
              {{ (jeu.price - jeu.price * (jeu.discount / 100)).toFixed(2) }}€
            </h4>
          </div>
        </div>
        <span class="direction" @click="getNewGames('right','discount')"
          >></span
        >
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="/js/index.js"></script>
  </body>
</html>
